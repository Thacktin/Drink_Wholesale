@model Drink_Wholesale.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Name) italok</h1>


<table class="table">
    <tbody>
    @foreach (var item in Model.SubCategories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-controller="SubCategories" asp-action="Details" asp-route-id=@item.Id>Details</a> 
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="Index">Vissza a főkategóriákra</a>
</div>
